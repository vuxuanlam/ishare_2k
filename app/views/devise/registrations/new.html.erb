<div class="page-content ask-question">
  <div class="boxedtitle page-title">
    <h2>Sign up</h2></div>
  <%=form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%=devise_error_messages! %>
      <div class="form-style form-style-3" id="user_email">
      <div class="field">
          <%=f.label :email %>
            <%=f.email_field :email, autofocus: true,id: "question-title" %>
      </div>
        <div class="clearfix"></div>
        <div class="field"> </div>
         <div class="field">
          <%=f.label :name %>
          <%=f.text_field :name, id: "question-title"%>
         </div>
        <div class="field">
          <%=f.label :gender %>
          <%=f.select :gender, options_for_select([ "Male", "Female"], "Male") %>
        </div>
        <div class="clearfix"></div>
        <div class="field">
          <%=f.label :age %>
          <%=f.select :age, options_for_select((10..99).to_a,25) %>
        </div>

        <div class="field">
          <%=f.label :password %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
              <%=f.password_field :password, autocomplete: "off", id: "question-title" %>
        </div>
        <div class="clearfix"></div>
        <div class="field"> </div>
        <div class="field">
          <%=f.label :password_confirmation %>
          <%=f.password_field :password_confirmation, autocomplete: "off",id: "question-title" %>
        </div>
        <div class="field"></div>
        <div class="clearfix"></div>
        <div class="actions">
        
            <input type="submit" name="commit" value="Sign Up" class="button color small submit", style="width: 110px;">

          </div>
          <% end %>
          <br />
          <div class="field"></div>
          <div class="clearfix"></div>
          <hr>
          <br />
          <%=render "devise/shared/links" %>
      </div>
</div>